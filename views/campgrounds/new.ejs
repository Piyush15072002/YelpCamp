<!-- using ejs-mate to add boilerplate to all the files -->

<% layout('layouts/boilerplate.ejs') %>

    <style>
        body {
            background-image: url('/pictures/BGcamp8.jpg');
            background-size: cover;
            background-position: center;
        }
    </style>

    <div class="row">

        <div class="col-6 offset-3">
            <div class="card shadow">
                <div class="card-body">
                    <div class="card-title">
                        <h1 class="text-center">New Campground</h1>
                    </div>
                    <form action="/campgrounds" method="post" novalidate class="validated-form"
                        enctype="multipart/form-data">
                        <!-- novalidate makes browser validations go away so bootstrap can take over -->

                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" id="title" name="campground[title]" class="form-control" required>
                            <div class="valid-feedback">
                                You are good to go!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" id="location" name="campground[location]" class="form-control" required>
                            <div class="valid-feedback">
                                Beautiful Location!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="Price" class="form-label">Campground Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="text" class="form-control" name="campground[price]" id="Price"
                                    placeholder="0.00" aria-label="Price" aria-describedby="price-label" required>
                            </div>
                            <div class="valid-feedback">
                                Good Price!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea type="text" id="description" name="campground[description]" class="form-control"
                                required></textarea>
                            <div class="valid-feedback">
                                Nice description!
                            </div>
                        </div>

                        <div>
                            <label class="form-label"="">Upload Images</label>
                            <div>
                                <input type="file" name="image" class="form-control" id="formFileMultiple" multiple>
                                <label for="formFileMultiple" class="form-label"></label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <button class="btn btn-success w-100">Add Campground</button>
                        </div>

                    </form>

                    <div>
                        <a href="/campgrounds" class="btn btn-danger w-100">Cancel</a>
                    </div>
                </div>
            </div>
        </div>

    </div>