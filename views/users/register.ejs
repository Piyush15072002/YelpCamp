<% layout('layouts/boilerplate.ejs') %>

<style>
    body {
        background-image: url('/pictures/BGcamp14.jpg');
        background-size: cover;
        background-position: center;
    }
</style>

        <div class="col-6 offset-3 mb-5">
            <div class="card shadow">

                <img src="/pictures/BGcamp4.jpg" alt="" class="card-img-top">

                <div class="card-body">

                    <div class="card-title">
                        <h3>Register</h3>
                    </div>

                    <form action="/register" method="post" class="validated-form" novalidate>

                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username"
                                required autofocus>
                            <div class="valid-feedback">Nice Name</div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="email@gmail.com" required>
                            <div class="valid-feedback">Thank you for your email</div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Password" required>
                            <div class="valid-feedback">Remember to remember your password</div>
                        </div>
                        <button class="btn btn-success w-100">Register</button>
                    </form>

                </div>

            </div>
        </div>